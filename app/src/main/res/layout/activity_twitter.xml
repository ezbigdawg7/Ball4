<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marckirsch.ball4.TwitterActivity">

    <Button
        android:id="@+id/twitterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/followtwitter"
        android:gravity="bottom|center_horizontal"
        android:minWidth="24dip"
        android:onClick="onClickTwitter"
        android:padding="0dp"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="87dp" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:onClick="onClickPost"
        android:text="---TWEET---"
        android:textColor="@android:color/black"
        android:layout_below="@+id/twitterButton"
        android:layout_alignLeft="@+id/twitterButton"
        android:layout_alignStart="@+id/twitterButton"
        android:layout_marginTop="127dp" />
</RelativeLayout>
